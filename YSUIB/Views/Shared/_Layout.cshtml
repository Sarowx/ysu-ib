<!DOCTYPE html>
<html>
<head>
    <meta charset="us-ascii" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ԵՊՀ ԻՄ</title>
    @Styles.Render("~/Content/site.css")
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/font-awesome/css/font-awesome.min.css")
    @Styles.Render("~/Content/w3.css")

    @if (ViewBag.Styles != null)
    {
        @Scripts.Render(Shared.getUniqueArray(ViewBag.Styles))
    }

    @Scripts.Render("~/Scripts/jquery-1.10.2.min.js")
    @Scripts.Render("~/Scripts/main.js")

    @if (ViewBag.Scripts != null)
    {
        @Scripts.Render(Shared.getUniqueArray(ViewBag.Scripts))
    }

    @RenderSection("Scripts",false)

</head>
<body>

    <div class="header">
        <div class="top">
            <nav class="navbar navbar-inverse">
                <div class="container">
                    @Html.Action("PartialNavbarList", "Shared");
                    <form class="navbar-form navbar-right" name="form1">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Search">
                        </div>
                        <button type="submit" class="btn btn-default">Փնտրել</button>
                    </form>
                </div>
            </nav>
        </div>
    </div>
    @RenderBody()
    <footer class="footer">
        <div class="container">
            <div class="row ">
                <div class="col-md-3">
                    <img src="~/img/logo-hy.png" alt="">
                </div>
                <div class="col-md-3">
                    @Html.Action("PartialList","Faculties")
                </div>
                <div class="col-md-3">
                    @Html.Action("PartialList", "Ambions")
                </div>
                <div class="col-md-3">
                    <div class="a2a_kit a2a_kit_size_32 a2a_default_style">
                        <br><br><br><br>
                        <a class="a2a_dd" href="https://www.addtoany.com/share"></a>
                        <a class="a2a_button_facebook"></a>
                        <a class="a2a_button_twitter"></a>
                        <a class="a2a_button_google_plus"></a>
                    </div>
                    <script async src="https://static.addtoany.com/menu/page.js"></script>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
